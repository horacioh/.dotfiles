{
  "window.zoomLevel": 4,
  "workbench.startupEditor": "none",
  "editor.minimap.enabled": false,
  "explorer.confirmDragAndDrop": false,
  "stylelint.enable": true,
  "css.validate": false,
  "scss.validate": false,
  "files.associations": {
    "*.css": "postcss"
  },
  "gitlens.keymap": "alternate",
  "editor.formatOnSave": false,
  "editor.tabSize": 2,
  "prettier.singleQuote": true,
  "workbench.colorTheme": "Material Theme High Contrast",
  // Controls the font family.
  "editor.fontFamily": "'Mono Lisa', 'Dank Mono', 'Menlo Monaco', 'Courier New', monospace",
  // Controls the font size.
  "editor.fontSize": 16,
  // Controls the line height. Use 0 to compute the lineHeight from the fontSize.
  "editor.lineHeight": 0,
  // Enables font ligatures.
  "editor.fontLigatures": true,
  // Controls if file decorations should use badges.
  "explorer.decorations.badges": false,
  // Sets the terminal font size.
  "terminal.integrated.fontSize": 16,
  // Apparently line-height works differently in the terminal.
  "terminal.integrated.lineHeight": 1.45,
  "materialTheme.cache.workbench.settings": {
    "themeColours": "Default"
  },
  "workbench.colorCustomizations": {},
  "workbench.statusBar.visible": false,
  "workbench.activityBar.visible": false,
  "workbench.sideBar.location": "right",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
